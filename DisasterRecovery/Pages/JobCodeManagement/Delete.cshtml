@page
@model DisasterRecovery.Pages.JobCodeManagement.DeleteModel
@{
    ViewData["Title"] = "Delete Job Code";
}

<div>
    <a asp-page="./Index"><img style="height: 30px; width: 30px;" src="https://static.thenounproject.com/png/251451-200.png" /></a>
</div>
<br />
<div class="form-container">
    <h3>Are you sure you want to delete this Job?</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JobCode.JobCodeName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JobCode.JobCodeName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JobCode.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JobCode.Description)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="JobCode.JobCodeID" />
        <input type="submit" value="Permanently Delete Job" class="btn btn-danger" />
    </form>
</div>
