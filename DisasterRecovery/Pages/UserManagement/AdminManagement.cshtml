@page
@model DisasterRecovery.Pages.UserManagement.AdminManagementModel
@{
    ViewData["Title"] = "Admin Management";
}


<div class="table-container">
    <h1>Admin Management</h1>
    <table class="table align-middle mb-0 bg-white">
        <thead class="bg-light">
            <tr>
                <th>Admin Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var admin in Model.Admins)
            {
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            <img src="/images/employeeFrofile.png"
                                 style="width: 45px; height: 45px"
                                 class="rounded-circle" />
                            <div class="ms-3">
                                <p class="fw-bold mb-1">@admin.FirstName @admin.LastName</p>
                            </div>
                        </div>
                    </td>
                    <td>
                        @{
                            var email = await Model.getEmailById(admin.AdminID);
                        }
                        <p class="text-muted mb-0">@email</p>
                    </td>
                    <td>
                        <a asp-page="./DeleteAdmin" asp-route-id="@admin.AdminID"
                           class="link-danger link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">
                            <img src="/images/trash.png" style="width: 35px; height: 32px"/>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
