@page
@model DisasterRecovery.Pages.UserManagement.ContractorManagementModel
@{
    ViewData["Title"] = "User Management";
}


<div class="table-container">

    <span class="contractor-header">
        Contractor <a asp-page="./Create"><img src="/images/create.png" /></a>
    </span>


    <table class="table align-middle mb-0 bg-white">
        <thead class="bg-light">
            <tr>
                <th>Contractor Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tboody>
            @foreach (var contractor in Model.Contractors)
            {
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            <img src="/images/employeeFrofile.png"
                                 style="width: 45px; height: 45px"
                                 class="rounded-circle" />
                            <div class="ms-3">
                                <p class="fw-bold mb-1">@contractor.FirstName @contractor.LastName</p>
                            </div>
                        </div>
                    </td>
                    <td>
                        @{
                            var email = await Model.getEmailById(contractor.ContractorID);
                        }
                        <p class="text-muted mb-0">@email</p>
                    </td>
                    <td>
                        <a asp-page="./DeleteContractor" asp-route-id="@contractor.ContractorID"
                           class="link-danger link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">
                            <img src="/images/trash.png" style="width: 35px; height: 32px" />
                        </a>
                    </td>
                </tr>
            }
        </tboody>
    </table>
</div>
