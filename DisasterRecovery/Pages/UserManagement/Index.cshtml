@page
@model DisasterRecovery.Pages.UserManagement.IndexModel
@{
    ViewData["Title"] = "User Management";
}


<div class="table-container">
    <h1>Admin</h1>
    <table class="table align-middle mb-0 bg-white">
        <thead class="bg-light">
            <tr>
                <th>Admin Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var admin in Model.Admins)
                {
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            <img src="/images/employeeFrofile.png"
                                 style="width: 45px; height: 45px"
                                 class="rounded-circle" />
                            <div class="ms-3">
                                <p class="fw-bold mb-1">@admin.FirstName @admin.LastName</p>
                                @*<p class="text-muted mb-0">@admin.Email</p>*@
                            </div>
                        </div>
                    </td>
                    <td>
                        <a asp-page="./Delete" asp-route-id="@admin.AdminID"
                           class="link-danger link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">
                            Delete
                        </a>
                    </td>
                </tr>
                }
            </tbody>
    </table>

    <br />
    <h1>Contractor</h1>
    <a asp-page="./Create">Create Contractor</a>
    <table class="table align-middle mb-0 bg-white">
        <thead class="bg-light">
            <tr>
                <th>Contractor Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tboody>
            @foreach (var contractor in Model.Contractors)
            {
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            <img src="/images/employeeFrofile.png"
                                 style="width: 45px; height: 45px"
                                 class="rounded-circle" />
                            <div class="ms-3">
                                <p class="fw-bold mb-1">@contractor.FirstName @contractor.LastName</p>
                                @*<p class="text-muted mb-0">@contractor.Email</p>*@
                            </div>
                        </div>
                    </td>
                    <td>
                        <a asp-page="./AddDepartment" asp-route-id="@contractor.ContractorID"
                           class="link-primary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">
                        Edit</a> |
                        <a asp-page="./Delete" asp-route-id="@contractor.ContractorID"
                                    class="link-danger link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">
                        Delete</a>
                    </td>
                </tr>
            }
        </tboody>
    </table>
</div>
