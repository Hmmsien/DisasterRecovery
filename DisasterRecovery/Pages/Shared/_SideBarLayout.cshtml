<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EmployeeManager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EmployeeManager.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lora:wght@600&family=Nunito&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,500,0,0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

</head>
<body style="background-color: #FFFFFF; font-family: Inter;">
    <header>
        <nav style="background-color: #2F3C7E;" class="navbar navbar-dark border-bottom box-shadow mb-3 py-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img src="https://cdn0.iconfinder.com/data/icons/business-continuity-plan-5/512/DisasterRecoveryPlan-backupplan-recoveryplan-corporaterecoveryplan-company-512.png" width="33" height="33" class="d-inline-block align-top" alt="logo" />
                    <b style="color: #FBEAEB">Disaster Recovery</b>
                </a>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>

    <div style="margin-top: -16px;" class="container-fluid">
        <div class="row flex-nowrap">
            <div class="col-auto px-0">
                <div id="sidebar" class="collapse collapse-horizontal show border-end">
                    <div style="width: 250px; background-color: #FAF9F6;" id="sidebar-nav" class="list-group border-0 rounded-0 text-sm-start min-vh-100">
                        <a style="background-color: #FAF9F6;" asp-area="" asp-page="/Dashboard" class="list-group-item border-end-0 d-inline-block text-truncate py-3" data-bs-parent="#sidebar"><i class="bi bi-speedometer"></i>&nbsp;&nbsp;<span>Dashboard</span> </a>
                        @if (User.HasClaim(c => c.Type == "Admin"))
                        {

                            <a style="background-color: #FAF9F6;" class="list-group-item border-end-0 d-inline-block text-truncate py-3" data-bs-parent="#sidebar" asp-area="" asp-page="/JobCodeManagement/Index"><i class="bi bi-tools"></i>&nbsp;&nbsp;<span>Job Code Management</span></a>
                            <a style="background-color: #FAF9F6;" class="list-group-item border-end-0 d-inline-block text-truncate py-3" data-bs-parent="#sidebar" asp-area="" asp-page="/MachineCodeManagement/Index"><i class="bi bi-gear"></i>&nbsp;&nbsp;<span>Machine Management</span></a>
                            <a style="background-color: #FAF9F6;" class="list-group-item border-end-0 d-inline-block text-truncate py-3" data-bs-parent="#sidebar" asp-area="" asp-page="/TimesheetApproval/Index"><i class="bi bi-card-checklist"></i>&nbsp;&nbsp;<span>Timesheet Approval</span></a>
                            <div style="width:100%;" class="dropdown">
                                <a style="background-color: #FAF9F6;" class="list-group-item border-end-0 d-inline-block text-truncate d-flex align-items-center dropdown-toggle py-3" data-bs-parent="#sidebar" id="dropdownUser2" data-bs-toggle="dropdown" aria-expanded="false"><i class="bi bi-people"></i>&nbsp;&nbsp;<span>User Management</span></a>
                                <ul style="background-color: #FAF9F6;" class="dropdown-menu text-small">
                                    <li>
                                        <a class="nav-link text-dark dropdown-item" asp-area="" asp-page="/UserManagement/AdminManagement">&nbsp;&nbsp;<span>Admin</span></a>
                                    </li>
                                    <li style="width: 100%;"><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="nav-link text-dark dropdown-item" asp-area="" asp-page="/UserManagement/ContractorManagement">&nbsp;&nbsp;<span>Contractor</span></a>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        @if (User.HasClaim(c => c.Type == "Contractor"))
                        {
                            <a style="background-color: #FAF9F6;" class="list-group-item border-end-0 d-inline-block text-truncate py-3" data-bs-parent="#sidebar" asp-area="" asp-page="/TimesheetSubmission/Index"><i class="bi bi-table"></i>&nbsp;&nbsp;<span>Timesheet Submissions</span></a>
                        }
                    </div>
                </div>
            </div>
            <div class="col ps-md-2">
                <div style="background-color: #FFFFFF;" class="container py-3 mt-3">
                    <main role="main" class="">
                        @RenderBody()
                    </main>
                </div>
            </div>
        </div>
    </div>

    <footer style="height: 1px;" class="border-top footer text-muted px-5 pt-3">
        &copy; 2023 - Employee Manager - <a asp-area="" asp-page="/Privacy">Privacy</a>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

