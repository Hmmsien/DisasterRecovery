@page
@model DisasterRecovery.Pages.MachineCodeManagement.CreateModel
@{
    ViewData["Title"] = "Create Machine Code";
}

<div>
    <a asp-page="./Index"><img style="height: 30px; width: 30px;" src="https://static.thenounproject.com/png/251451-200.png" /></a>
</div>
<br />
<h2><b>@ViewData["Title"]</b></h2>
<hr />
<br />
@if (Model.ErrorMessage != "")
{
    <div class="alart alert-danger p-3" role="alert">
        <b>Server Error: </b>@Model.ErrorMessage
    </div>
    <br />
}
<div class="row">
    <div class="col-md-4">
        <form id="createMachineCode" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.MachineCodeName" class="form-control" aria-required="true" />
                <label asp-for="Input.MachineCodeName"></label>
                <span asp-validation-for="Input.MachineCodeName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Description" class="form-control" aria-required="true" />
                <label asp-for="Input.Description"></label>
                <span asp-validation-for="Input.Description" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.UsageRate" class="form-control" aria-required="true" />
                <label asp-for="Input.UsageRate"></label>
                <span asp-validation-for="Input.UsageRate" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.MaxHoursPerDay" class="form-control" aria-required="true" />
                <label asp-for="Input.MaxHoursPerDay"></label>
                <span asp-validation-for="Input.MaxHoursPerDay" class="text-danger"></span>
            </div>
            <button id="createMachineCode" type="submit" class="w-100 btn btn-lg btn-primary mt-3">Create</button>
        </form>
    </div>
</div>
